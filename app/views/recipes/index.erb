<h1>Cook Book Nook recipes</h1>
<h3>Hi, <%=@user.username%>! <a href="/logout"><button>Log Out</button></a> </h3>
<h3>Would you like to share a new recipe today?</h3> 
<a href="/recipes/new"><button>Yes, please!</button></a>
<%Recipe.all.each do |recipe|%>
<p><img src="/images/<%=recipe.picture%>" alt="<%=recipe.name%>" width=100></p>
<p><a href="/recipes/<%=recipe.id%>"><%=recipe.name%></a> added by <a href="/users/<%=recipe.user.slug%>"><%=recipe.user.username%></p>
<%end%>


<h2><%=@recipe.name%></h2>
<p><b>Ingredients:</b> </p>
<p><%=@recipe.ingredients%></p>
<p><b>Cooking instructions:</b></p>
<p><%=@recipe.instructions%></p>
<%if @recipe.user == @user%>
<p><a href="/recipes/<%=@recipe.id%>/edit"><button>Edit</button></a> </p>
<form action="/recipes/<%= @recipe.id %>/delete" method="post">
	<input id="hidden" type="hidden" name="_method" value="delete">
	<button value="delete">Delete</button>
</form>
<%else%>
<p>This recipe was created by <a href="/users/<%=@recipe.user.slug%>"><%=@recipe.user.username%></a></p>
<%end%>
<a href="/recipes"><button>Home Page</button></a>

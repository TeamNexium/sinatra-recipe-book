<img src="/images/<%=@recipe.picture%>" alt="<%=@recipe.name%>" width=300>
<h2><%=@recipe.name%></h2>
<p><b>Ingredients:</b> </p>
<p><%=@recipe.ingredients%></p>
<p><b>Cooking instructions:</b></p>
<p><%=@recipe.instructions%></p>
<%if @recipe.user == @user%>

<form action="/recipes/<%= @recipe.id %>/delete" method="post">
<a href="/recipes/<%=@recipe.id%>/edit"><button class="small_button" id="red">Edit</button></a>
	<input id="hidden" type="hidden" name="_method" value="delete">
	<button value="delete" class="small_button" id="red">Delete</button>
</form>
<%else%>
<p>This recipe was created by <a href="/users/<%=@recipe.user.slug%>"><%=@recipe.user.username%></a></p>
<%end%>
<br>
<a href="/recipes"><button class="small_button">Home Page</button></a>
